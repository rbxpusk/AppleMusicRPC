# Discord Application Settings
# Create your Discord app at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=YOUR_APP_ID

# Update interval in milliseconds (how often to check for song changes)
UPDATE_INTERVAL=5000

# Show elapsed time on Discord RPC
SHOW_ELAPSED_TIME=true

# Album Artwork Settings
# Set to true to use real album artwork instead of GIF/static image
USE_ALBUM_ARTWORK=true

# External GIF URL (Discord animates it automatically!)
# Example: https://i.imgur.com/yourfile.gif or https://media.tenor.com/xyz.gif
# Leave empty to use static image
GIF_URL=

# Debug Mode - Shows detailed logging for troubleshooting
DEBUG_MODE=false
